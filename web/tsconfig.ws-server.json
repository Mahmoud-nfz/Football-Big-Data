{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "dist",
      "target": "ES2019",
      "lib": ["ES2019", "DOM"],
      "isolatedModules": true,
      "noEmit": false,
      "strict": true,
      "resolveJsonModule": true,
      "resolvePackageJsonImports": true
    },
    "include": [
      "next.config.js",
      "next-env.d.ts",
      ".next/types/**/*.ts",
      "src/server/**/*.ts",
      "src/ws-server.ts",
      "src/env.js"
    ]
  }
  